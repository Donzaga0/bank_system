<div class="transactions-list">
    <% if (transcations.length > 0) { %>
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
            </div>
            <div class="card-body p-0">
                <% transcations.forEach((transcation, index) => { %>
                    <div class="transaction-item border-bottom <%= index === transcations.length - 1 ? '' : 'border-bottom' %> p-3">
                        <div class="d-flex justify-content-between align-items-start w-100">
                            <!-- Left side content -->
                            <div>
                                <div class="fw-bold mb-1"><%= transcation.description %></div>
                                <div class="transaction-meta">
                                    <span class="text-muted small text-capitalize me-2"><%= transcation.type %></span>
                                    
                                    <!-- Status badge with continuous zoom -->
                                    <% if (transcation.status === 'pending') { %>
                                        <span class="status-badge zoom-continuous badge-pending">
                                            <i class="fas fa-clock me-1"></i>
                                            <%= transcation.status %>
                                        </span>
                                    <% } else if (transcation.status === 'completed') { %>
                                        <span class="status-badge zoom-continuous badge-completed">
                                            <i class="fas fa-check me-1"></i>
                                            <%= transcation.status %>
                                        </span>
                                    <% } else if (transcation.status === 'cancelled') { %>
                                        <span class="status-badge zoom-continuous badge-cancelled">
                                            <i class="fas fa-times me-1"></i>
                                            <%= transcation.status %>
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                            
                            <!-- Right side content -->
                            <div class="text-end">
                                <!-- Amount -->
                                <div class="transaction-amount fw-bold mb-1
                                    <% if (transcation.type === 'debit') { %>text-danger
                                    <% } else if (transcation.type === 'credit') { %>text-success
                                    <% } %>">
                                    <% if (transcation.type === 'debit') { %>-<% } else if (transcation.type === 'credit') { %>+<% } %>
                                    $<%= transcation.amount %>
                                </div>
                                
                                <!-- Date -->
                                <div class="transaction-date text-muted small mb-1">
                                    <%= transcation.date.toLocaleDateString() %>
                                </div>
                                
                                <!-- Balance - only show for some transactions like in the design -->
                                <% if (index !== 0) { %>
                                    <div class="transaction-balance text-muted small">
                                        $<%= transcation.balance %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } else { %>
        <!-- Empty state -->
        <div class="text-center py-4">
            <i class="fas fa-exchange-alt fa-2x text-muted mb-2"></i>
            <p class="text-muted mb-0">No transactions found</p>
        </div>
    <% } %>
</div>

